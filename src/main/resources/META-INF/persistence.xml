<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="arosaje">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="javax.persistence.jdbc.user" value="nosithouss"/>
            <property name="javax.persistence.jdbc.password" value="nosithouss"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/arosaje"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="show_sql" value="true"/>
            <property name="format_sql" value="true"/>
        </properties>

    </persistence-unit>
</persistence>
